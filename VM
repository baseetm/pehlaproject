VM1
=============================================
sudo apt-get update
sudo apt install apache2
sudo ufw allow 'Apache'
sudo ufw allow 'Apache Full'
sudo ufw enable
sudo ufw reload
sudo add-apt-repository ppa:ondrej/php
sudo add-apt-repository ppa:ondrej/apache2
sudo apt install php libapache2-mod-php8.1
sudo apt install php-mysql
sudo nano /var/www/html/index.php
sudo service apache2 restart



VM2
=============================================
sudo apt-get update
sudo apt install mysql-server
sudo ufw allow 3306/tcp
sudo ufw enable
sudo ufw reload
sudo mysql
CREATE USER 'john'@'%' IDENTIFIED BY 'John@1234';
CREATE DATABASE webapp_db;
GRANT ALL PRIVILEGES ON webapp_db.* TO 'john'@'%';
FLUSH PRIVILEGES;
USE webapp_db;
CREATE TABLE users (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(100) NOT NULL,
    email VARCHAR(100) NOT NULL
);
EXIT
sudo nano /etc/mysql/mysql.conf.d/mysqld.cnf
#####comment bind address#####
sudo service mysql restart


VM3
================================================
sudo apt update
sudo apt upgrade -y
sudo apt install apache2 -y
sudo a2enmod proxy
sudo a2enmod proxy_http
sudo a2enmod proxy_balancer
sudo a2enmod lbmethod_byrequests
sudo a2enmod ssl
sudo   systemctl restart apache2
sudo nano /etc/apache2/sites-available/000-default.conf
### add with in <VirtualHost *:80> and add vm1 external IP
        ProxyRequests Off
        ProxyPass / http://35.184.59.119:80/
        ProxyPassReverse / http://35.184.59.119:80/

        <Proxy *>
            Order allow,deny
            Allow from all
        </Proxy>
###
sudo apache2ctl configtest
sudo systemctl reload apache2
